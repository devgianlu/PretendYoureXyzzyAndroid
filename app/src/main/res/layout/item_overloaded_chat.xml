<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/overloadedChatItem_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/overloadedChatItem_unread"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_circle_secondary"
            android:textAlignment="center"
            android:textColor="@color/colorOnSecondary"
            android:textSize="14sp" />
    </LinearLayout>

    <com.gianlu.commonutils.misc.SuperTextView
        android:id="@+id/overloadedChatItem_lastMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:fontFamily="@font/roboto_regular"
        android:singleLine="true" />

</LinearLayout>