<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <ImageButton
        android:id="@+id/metricsFragment_back"
        style="@style/ToolbarIconStyle"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/baseline_arrow_back_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="12dp"
        android:text="@string/metrics"
        android:textAppearance="@style/TextAppearance.Medium"
        android:textSize="24sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:scrollbars="none">

        <com.gianlu.commonutils.misc.BreadcrumbsView
            android:id="@+id/metricsFragment_breadcrumbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:arrowRes="@drawable/baseline_keyboard_arrow_right_24"
            app:color="?android:textColorPrimary" />
    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/metricsFragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>