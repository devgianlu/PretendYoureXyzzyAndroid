<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/createCardDialog_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:justificationMode="inter_word"
        tools:targetApi="o" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/createCardDialog_imageLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/imageLink"
        app:endIconCheckable="false"
        app:endIconContentDescription="@string/uploadImage"
        app:endIconDrawable="@drawable/baseline_publish_24"
        app:endIconMode="custom">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.gianlu.pretendyourexyzzy.cards.GameCardView
        android:id="@+id/createCardDialog_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="4dp" />
</LinearLayout>