<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Common attrs -->
    <attr name="icon" format="reference" />

    <!-- Preferences -->
    <declare-styleable name="PreferenceItemView">
        <attr name="icon" />
        <attr name="title" format="string" />
        <attr name="titleTextColor" format="color" />
        <attr name="subtitle" format="string" />
        <attr name="subtitleTextColor" format="color" />
    </declare-styleable>

    <!-- Achievements -->
    <declare-styleable name="AchievementProgressView">
        <attr name="completeColor" format="color" />
        <attr name="incompleteColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="icon" />
        <attr name="minValue" format="integer" />
        <attr name="maxValue" format="integer" />
        <attr name="actualValue" format="integer" />
        <attr name="desc" format="string" />
    </declare-styleable>

    <!-- Custom deck navigation -->
    <declare-styleable name="NavigationView">
        <attr name="selected" format="integer" />
        <attr name="bgColor" format="color" />
        <attr name="fgColor" format="color" />
    </declare-styleable>

    <!-- MaxHeightFrameLayout -->
    <declare-styleable name="MaxHeightFrameLayout">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>

    <!-- ServerFeaturesView -->
    <declare-styleable name="ServerFeaturesView">
        <attr name="activeColor" format="color" />
        <attr name="inactiveColor" format="color" />
    </declare-styleable>
</resources>