<resources>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppTheme.FullDark" parent="AppTheme" />

    <style name="UrbanDictTheme">
        <item name="colorPrimary">@color/urbanPrimary</item>
        <item name="colorPrimaryDark">@color/urbanPrimaryDark</item>
        <item name="colorAccent">@color/urbanAccent</item>
    </style>

    <style name="CustomTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense" />

    <style name="LoadingActivityCardTitle">
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <declare-styleable name="ImagesListView">
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="textGravity" format="enum">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
        </attr>
        <attr name="emptyText" format="string" />
        <attr name="imageSize" format="dimension" />
    </declare-styleable>

    <!-- Fab label style -->
    <style name="FabLabel">
        <item name="android:background">@drawable/fab_label_layout</item>
        <item name="android:textColor">?colorSurface</item>
    </style>
</resources>
